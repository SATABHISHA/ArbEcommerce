    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_centerInParent="true"
            android:textColor="#000000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="What is your\nRetailer?"/>
            <RelativeLayout
                android:id="@+id/rl_wholesaler"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:background="@drawable/layout7">

                <TextView
                    android:id="@+id/tv_wholesalertitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="I am a"
                    android:textColor="#4f4f4f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_wholesalertitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_wholesalertitle1"
                    android:layout_centerHorizontal="true"
                    android:text="Wholesaler"
                    android:textColor="#333333"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_retailer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:background="@drawable/layout7">

                <TextView
                    android:id="@+id/tv_retailertitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="I am a"
                    android:textColor="#4f4f4f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_retailertitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_retailertitle1"
                    android:layout_centerHorizontal="true"
                    android:text="Retailer"
                    android:textColor="#333333"
                    android:textSize="22sp" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>